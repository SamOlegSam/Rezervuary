@model IEnumerable<Reservuary.Models.tanks>
@{
    ViewBag.Title = "Novopolock";
}

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>


<h3>Новополоцк</h3>
<div>
    <table>
        <tr>
            <td>
                <input type="date" class="form-control btn-block" id="datapicker" value="@DateTime.Now" />
            </td>
            <td>
                &nbsp;&nbsp;
            </td>
            @*<td>
                <button type="submit" class="btn btn-info" style="min-width:100px" onclick="GetDB()">Получить данные</button>
            </td>*@
            <td>
                &nbsp;&nbsp;
            </td>
            <td>
                <button type="submit" class="btn btn-info" style="min-width:100px" onclick="WriteDB()">Записать данные</button>
            </td>
            @*<td>
                &nbsp;&nbsp;
            </td>*@
            @*<td>
                <button type="submit" class="btn btn-info" style="min-width:100px" onclick="Report()">Отчет в PDF</button>
            </td>*@
        </tr>
    </table>
</div>
<hr>
<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<div id="tab">


    <table class="table">
        <tr>
            <th width="30%">
                Резервуары
            </th>
            <th width="10%">
                Общий уровень нефти, (мм)
            </th>
            <th width="10%">
                Уровень подтоварной воды, <sup><i>3</i></sup>
            </th>
            <th width="10%">
                Объем нефти, (м<sup><i>3</i></sup>)
            </th>
            <th width="10%">
                Объём подтоварной воды, (м<sup><i>3</i></sup>)
            </th>
            <th width="10%">
                Общий объем, (м<sup><i>3</i></sup>)
            </th>
            <th width="10%">
                Минимально допустимый уровень, (мм)
            </th>
            <th width="10%">
                Минимально допустимый объём, (м<sup><i>3</i></sup>)
            </th>
        </tr>
    </table>

    <table class="table" id="tabb">

        @{
            int u = 0;
        }

        @foreach (var item in Model)
        {
            u++;
            <tr tr class="odd">
                <td>
                    <input type="hidden" class="form-control btn-block" id="LocID_@u" >
                </td>
                <td>
                    <input type="hidden" class="form-control btn-block" id="ID_@u" >
                </td>
                <td>
                    <input type="hidden" class="form-control btn-block" id="User_@u" value="@System.Security.Principal.WindowsIdentity.GetCurrent().Name.Trim()">
                </td>
                <td>
                    <input type="hidden" class="form-control btn-block" id="tankName_@u" >
                </td>
                <td width="30%">
                    @item.tank_NAME
                </td>
                <td width="10%">
                    <input type="text" class="form-control btn-block" id="Urovenn_@u"  onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');">
                </td>
                <td width="10%" id="test">
                    <input type="text" class="form-control btn-block" id="UrovH2O_@u"  onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');">
                </td>
                <td width="10%">
                    <input type="text" class="form-control btn-block" id="VITOG_@u"  onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');">
                </td>
                <td width="10%">
                    <input type="text" class="form-control btn-block" id="VH2O_@u"  onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');">
                </td>
                <td width="10%">
                    <input type="text" class="form-control btn-block" id="V20_@u"  onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');">
                </td>
                <td width="10%">
                   
                </td>
                <td width="10%">
                   
                </td>

            </tr>
        }
    </table>
</div>
<hr>
